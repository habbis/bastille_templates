PKG bash bash-completion ca_root_nss git-lite sudo vim
CP root /
CP usr /

CP usr /

CMD chown -R root:wheel /root
CMD chmod 700 /root/.ssh
CMD chmod 600 /root/.ssh/authorized_keys

CMD pw useradd ansible -s /usr/local/bin/bash -d /home/ansible
CP home /home/
CMD chown -R ansible:ansible /home/ansible
CMD chmod 700 /home/ansible/.ssh
CMD chmod 600 /home/ansible/.ssh/authorized_keys

CP etc /
CMD rm /etc/ssh/ssh_host_*
SYSRC sshd_dsa_enable="NO"
SYSRC sshd_ecdsa_enable="NO"
SYSRC sshd_ed25519_enable="YES"
SYSRC sshd_rsa_enable="YES"
SYSRC sshd_enable=YES
SYSRC sshd_flags=""
SERVICE sshd start
SERVICE sshd keygen
SERVICE sshd restart

CMD /usr/bin/chsh -s /usr/local/bin/bash
